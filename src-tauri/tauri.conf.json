{
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Arelith Combat Simulator",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "setSize": true,
                "close": true,
                "minimize": true,
                "startDragging": true,
                "setPosition": true,
                "create": true
            },
            "shell": {
                "all": false,
                "execute": false,
                "open": true,
                "scope": [],
                "sidecar": false
            },
            "notification": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "dev.zaphiel.are-combat-sim-gui",
            "longDescription": "Combat simulator for the Neverwinter Nights game based on Arelith changes with GUI.",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "title": "Arelith Combat Simulator",
                "height": 50,
                "width": 50,
                "fullscreen": false,
                "resizable": false,
                "decorations": false,
                "transparent": true
            }
        ]
    }
}
